@model PagedList.IPagedList<TicketDataMVCproject.Models.TicketModel>

@using PagedList.Mvc

@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    var i=0;

}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>
    $(document).ready(function () {
        $(".Select").mouseup(function () {
            $("tr").css("background-color", "");
            $(this).css("background-color", "cornflowerblue");
            
            //var i = $(this).attr('id');
            //alert("id is"+i)
        });
  
    });
</script>



<div style="background:transparent !important" class="jumbotron" id="myDiv" @*style="margin-top:40px"*@>

    <table class="table  table-hover">

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Ticket_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().CreatedDate)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.First().Account_Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Phone_Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Customer_Name)
            </th>
            <th> 
                @Html.DisplayNameFor(model => model.First().Selected)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.First().Description)
            </th>
            <th></th>
        </tr>
     
        @foreach (var item in Model)
        {

            <tr id="@("tr"+i)" class="Select">
                <td class="btnSelect" >
                    @Html.DisplayFor(modelItem => item.Ticket_ID)
                </td>
                <td class="btnSelect">
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>

                <td class="btnSelect" >
                    @Html.DisplayFor(modelItem => item.Account_Number)
                </td>
                <td class="btnSelect">
                    @Html.DisplayFor(modelItem => item.Phone_Number)
                </td>
                <td class="btnSelect" >
                    @Html.DisplayFor(modelItem => item.Customer_Name)
                </td>
                <td class="btnSelect">
                    @Html.DisplayFor(modelItem => item.Selected)
                </td>


                <td class="btnSelect">
                    @Html.DisplayFor(modelItem => item.Description)
                </td>

            </tr>
            i = i + 1;
        }


    </table>

    <div style="float:right">
        @Html.PagedListPager(Model, page => Url.Action("Index", "Home", new { page }))
    </div>
</div>





<div class="row" style="margin-left:130px !important">
    <div class="col-md-4">
        <p><a class="btn btn-default" href="">Close Seleted Tickets</a></p>
    </div>
    <div class="col-md-4">


        <p><a><b>Ticket Counts - @Model.TotalItemCount</b></a></p>
    </div>
    <div class="col-md-4">

        <p><a class="btn btn-primary" href="">Refresh</a></p>
    </div>
</div>


